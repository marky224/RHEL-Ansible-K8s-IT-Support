{
  "ClientIdentifier": "nexlify",
  "Environment": "lab",
  "DomainName": "tech.nexlify.nxl",
  "NetbiosName": "NXL",
  "ADFeatures": {
    "RecycleBin": true,
    "FineGrainedPasswordPolicies": true
  },
  "ForestMode": "Win2025",
  "DomainMode": "Win2025",
  "OrganizationalUnits": [
    {
      "Name": "INTERNAL",
      "Description": "Nexlify IT MSP employees"
    },
    {
      "Name": "EXTERNAL",
      "Description": "Vendors and consultants for Nexlify"
    },
    {
      "Name": "ADMIN",
      "Description": "Nexlify IT administrators"
    },
    {
      "Name": "SERVERS",
      "Description": "Server infrastructure (DCs, Ansible, etc.)"
    },
    {
      "Name": "WORKSTATIONS",
      "Description": "Managed end-user devices"
    },
    {
      "Name": "CLIENTS",
      "Description": "Parent OU for client-specific resources",
      "SubOUs": [
        {
          "Name": "RPT-ENG",
          "Description": "Raptor Engineering client"
        },
        {
          "Name": "NSM-TECH",
          "Description": "Neurostimulation Technologies client"
        },
        {
          "Name": "HYPER-CNSLT",
          "Description": "Hyper Consulting client"
        }
      ]
    }
  ],
  "Sites": [
    {
      "SiteName": "HQ",
      "DomainControllers": [
        {
          "Hostname": "NXL-DC01",
          "Network": {
            "StaticIP": "192.168.10.10",
            "SubnetMask": "255.255.255.0",
            "Gateway": "192.168.10.1",
            "DnsServers": ["192.168.10.10"],
            "Ports": {
              "WinRM": [5985, 5986],
              "SSH": 22
            }
          },
          "Storage": {
            "DatabasePath": "E:\\AD\\Database",
            "LogPath": "E:\\AD\\Logs",
            "SysvolPath": "E:\\AD\\SYSVOL"
          }
        }
      ],
      "Subnet": "192.168.10.0/24",
      "DnsForwarder": "8.8.8.8",
      "DHCP": {
        "PoolStart": "192.168.10.125",
        "PoolEnd": "192.168.10.254"
      },
      "Ansible": {
        "ControlNode": "NXL-ANSIBLE01",
        "ControlNodeIP": "192.168.10.100",
        "RemoteNodeGroup": "HQ-ManagedNodes",
        "Connection": {
          "Linux": "ssh",
          "Windows": "winrm"
        }
      },
      "Kubernetes": {
        "ClusterDnsZone": "k8s-hq.tech.nexlify.nxl",
        "ClusterNodesGroup": "HQ-K8sNodes",
        "Tools": ["prometheus", "grafana", "osticket"]
      }
    }
  ],
  "ServiceAccounts": {
    "Ansible": "ansible-svc@NXL.NXL",
    "Kubernetes": "k8s-svc@NXL.NXL"
  },
  "Security": {
    "GPOBaseline": "DC_Security_Baseline",
    "DisableNTLM": false,
    "EnableSMBSigning": true
  },
  "Backup": {
    "Target": "F:",
    "Schedule": "Daily",
    "Time": "02:00"
  }
}
